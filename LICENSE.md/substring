#include<stdio.h>
#include<string.h>

int main()

{

  char a[50],sub[50]; int c=0;
  int p,l;
  
  printf("enter the string");
  gets(a);
  
  printf("enter the position and length of string");
  scanf("%d %d",&p,&l);
  
  while(c<l){
  
  sub[c]=a[p+c-1];
  c++
  }
  sub[c]=0;
  
  printf("sub string is %s",sub);
  return 0;
  
  }
